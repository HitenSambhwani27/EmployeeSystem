@model IEnumerable<EmployeeSystem.Dtos.BadgeOut>
@{
    ViewData["Title"] = "BadgeQueue";

}
@{
}
<table class="table table-bordered">
<thead>
    <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>TemproaryBadge</th>
        <th>Assign</th>
        
    </tr>
</thead>
<tbody>
    @foreach (var data in Model)
    {
            if (@data.SignOut == null)
            {
             <tr>
            <td>
              <img src="~/images/@data.PhotoUrl" width="50">

            </td>
             <td>@data.employeefirstname</td>
             <td>@data.employeelastname</td>
            <td>
                @data.TemporaryBadge
            </td>
            <td>SinedIn </td>
   
        </tr>
        }
        else{
                <tr>
            <td>
              <img src="~/images/@data.PhotoUrl" width="50">

            </td>
             <td>@data.employeefirstname</td>
             <td>@data.employeelastname</td>
            <td>
                @data.TemporaryBadge
            </td>
            <td>SinedOut </td>
   
        </tr>
        }
    }
</tbody>
</table>